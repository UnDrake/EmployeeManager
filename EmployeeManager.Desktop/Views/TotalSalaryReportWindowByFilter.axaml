<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EmployeeManager.Desktop.ViewModels"
        x:Class="EmployeeManager.Desktop.Views.SalaryReportWindow"
        x:DataType="vm:TotalSalaryReportByFilterViewModel"
        Title="Total salaries" Width="300" Height="180">

	<Window.DataContext>
		<vm:TotalSalaryReportByFilterViewModel/>
	</Window.DataContext>

	<StackPanel Background="#5e3a8c" Margin="20" HorizontalAlignment="Center">
		<TextBlock Text="Total salaries by filter" FontSize="20" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Foreground="White" Margin="10"/>

		<Border BorderBrush="White" BorderThickness="2" CornerRadius="10" Margin="20" Padding="10">
			<TextBlock Text="{Binding TotalSalary}" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
		</Border>
	</StackPanel>
</Window>
